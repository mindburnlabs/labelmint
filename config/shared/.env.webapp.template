# LabelMint Web Application Environment Configuration
# For Next.js web applications

# ============================================================================
# NEXT.JS CONFIGURATION
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================================================
# PWA CONFIGURATION
# ============================================================================
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PWA_START_URL=/start
NEXT_PWA_SCOPE=/

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
NEXT_PUBLIC_GA_ID= # Google Analytics ID
NEXT_PUBLIC_HOTJAR_ID= # Hotjar ID
NEXT_PUBLIC_SENTRY_DSN= # Sentry DSN for client-side errors

# ============================================================================
# THIRD-PARTY API KEYS (Client-Side)
# ============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_TONCONNECT_MANIFEST_URL=https://your-domain.com/tonconnect-manifest.json

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_TELEGRAM=true
NEXT_PUBLIC_ENABLE_TONCONNECT=true

# ============================================================================
# UI CONFIGURATION
# ============================================================================
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_CURRENCIES=USD,EUR,TON