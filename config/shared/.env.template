# LabelMint Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production
# DO NOT COMMIT ACTUAL ENVIRONMENT FILES TO VERSION CONTROL

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
APP_VERSION=2.0.0
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Supabase Configuration (Recommended)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your-supabase-access-token

# Local Development Database
LOCAL_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Production Database (Legacy)
POSTGRES_DB=labelmint_prod
POSTGRES_USER=labelmint
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD= # Optional: Set for production Redis

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=change-this-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=change-this-super-secret-refresh-key-minimum-32-characters

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Features
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# TON Configuration
TON_TESTNET=true
TON_API_KEY=your-toncenter-api-key
TON_MAINNET_API_KEY=your-toncenter-mainnet-api-key

# ============================================================================
# CLOUD SERVICES
# ============================================================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=labelmint-storage
AWS_REGION=us-east-1

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBAPP_SECRET=your-telegram-webapp-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@labelmint.it
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@labelmint.it

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# Error Tracking
SENTRY_DSN=your-sentry-dsn

# Alerting
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7