# ==========================================
# Unified Environment Configuration for LabelMint
# ==========================================
# Copy this file to .env and update with your values

# ==========================================
# General Configuration
# ==========================================
NODE_ENV=production
ENVIRONMENT=production
APP_VERSION=1.0.0
BUILD_DATE=
GIT_BRANCH=
GIT_SHA=

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=labelmint
POSTGRES_USER=labelmint
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_PORT=5432

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379
REDIS_BOTS_PORT=6380

# ==========================================
# Application Security
# ==========================================
JWT_SECRET=your_very_secure_jwt_secret_key_here
PAYMENT_SECRET_KEY=your_payment_secret_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# ==========================================
# TON Blockchain Configuration
# ==========================================
TON_API_KEY=your_ton_api_key
TON_MERCHANT_ADDRESS=your_ton_merchant_address
USDT_MASTER_CONTRACT=your_usdt_master_contract
TON_RPC_ENDPOINT=https://toncenter.com/api/v2/jsonRPC

# ==========================================
# Telegram Bot Configuration
# ==========================================
TELEGRAM_BOT_TOKEN_CLIENT=your_client_bot_token
TELEGRAM_BOT_TOKEN_WORKER=your_worker_bot_token
CLIENT_BOT_TOKEN=your_client_bot_token
WORKER_BOT_TOKEN=your_worker_bot_token

# ==========================================
# MinIO S3 Storage Configuration
# ==========================================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==========================================
# Application URLs
# ==========================================
WEB_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3101
NEXT_PUBLIC_WS_URL=ws://localhost:3101
API_GATEWAY_URL=http://localhost:3104
EXTERNAL_URL=http://localhost:3000
API_URL=http://localhost:3101/health
PAYMENT_URL=http://localhost:3103/health

# ==========================================
# Port Configuration (for port conflicts resolution)
# ==========================================
# Frontend
WEB_PORT=3000

# Backend Services
API_GATEWAY_PORT=3104
LABELING_BACKEND_PORT=3101
PAYMENT_BACKEND_PORT=3103

# Bot Services
CLIENT_BOT_PORT=3105
WORKER_BOT_PORT=3106

# Monitoring Services
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
LOKI_PORT=3100
TEMPO_PORT=3200
ALERTMANAGER_PORT=9093
NODE_EXPORTER_PORT=9100

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Debug Tools (optional)
REDIS_COMMANDER_PORT=8081
PGADMIN_PORT=5050

# ==========================================
# Monitoring Configuration
# ==========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password
GRAFANA_DOMAIN=localhost
LOG_LEVEL=info

# ==========================================
# Email Configuration (for alerts)
# ==========================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com:587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=alerts@labelmint.com

# ==========================================
# Remote Monitoring Configuration (Optional)
# ==========================================
REMOTE_WRITE_URL=
REMOTE_WRITE_USERNAME=
REMOTE_WRITE_PASSWORD=
REMOTE_READ_URL=
REMOTE_READ_USERNAME=
REMOTE_READ_PASSWORD=

# ==========================================
# Debug Tools Configuration
# ==========================================
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin
PGADMIN_EMAIL=admin@labelmint.com
PGADMIN_PASSWORD=your_secure_pgadmin_password

# ==========================================
# Feature Flags
# ==========================================
ENABLE_DEBUG_TOOLS=false
ENABLE_MONITORING=true
ENABLE_BOTS=true
ENABLE_EXTERNAL_METRICS=false