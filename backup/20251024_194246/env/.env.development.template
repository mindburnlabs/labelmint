# LabelMint Development Environment Configuration
# Copy this file to .env.local for local development
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
APP_VERSION=2.0.0
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Supabase Development Configuration
SUPABASE_URL=https://your-dev-project-ref.supabase.co
SUPABASE_ANON_KEY=your-dev-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-supabase-service-role-key
SUPABASE_PROJECT_REF=your-dev-project-ref
SUPABASE_ACCESS_TOKEN=your-dev-supabase-access-token

# Local Development Database
LOCAL_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=dev-jwt-secret-key-change-in-production-32chars
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-32chars

# CORS Configuration (Development Origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting (Relaxed for Development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Features
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# TON Configuration (Testnet for Development)
TON_TESTNET=true
TON_API_KEY=your-toncenter-testnet-api-key
TON_MAINNET_API_KEY=your-toncenter-mainnet-api-key

# ============================================================================
# CLOUD SERVICES
# ============================================================================
# AWS Development Configuration
AWS_ACCESS_KEY_ID=your-dev-aws-access-key
AWS_SECRET_ACCESS_KEY=your-dev-aws-secret-key
AWS_S3_BUCKET=labelmint-dev-storage
AWS_REGION=us-east-1

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================
# OpenAI Development Configuration
OPENAI_API_KEY=your-openai-dev-api-key

# Telegram Development Configuration
TELEGRAM_BOT_TOKEN=your-dev-telegram-bot-token
TELEGRAM_WEBAPP_SECRET=your-dev-telegram-webapp-secret

# Email Development Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-dev-email@labelmint.it
SMTP_PASS=your-dev-app-password
EMAIL_FROM=noreply@labelmint.it

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Development Monitoring
GRAFANA_PASSWORD=dev-grafana-password

# Error Tracking (Optional for Development)
SENTRY_DSN=your-dev-sentry-dsn

# Alerting (Optional for Development)
SLACK_WEBHOOK_URL=your-dev-slack-webhook-url

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7