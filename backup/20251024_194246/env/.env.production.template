# LabelMint Production Environment Configuration
# Copy this file to .env.production for production deployment
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=production
APP_VERSION=2.0.0
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Supabase Production Configuration
SUPABASE_URL=https://your-prod-project-ref.supabase.co
SUPABASE_ANON_KEY=your-prod-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-supabase-service-role-key
SUPABASE_PROJECT_REF=your-prod-project-ref
SUPABASE_ACCESS_TOKEN=your-prod-supabase-access-token

# Production Database (Legacy - if not using Supabase)
POSTGRES_DB=labelmint_prod
POSTGRES_USER=labelmint
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_SUPER_SECRET_REFRESH_KEY_MINIMUM_32_CHARACTERS

# CORS Configuration (Production Origins)
CORS_ORIGIN=https://labelmint.it,https://www.labelmint.it,https://app.labelmint.it

# Rate Limiting (Strict for Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Features
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# TON Configuration (Mainnet for Production)
TON_TESTNET=false
TON_API_KEY=CHANGE_THIS_TON_API_KEY
TON_MAINNET_API_KEY=CHANGE_THIS_TON_MAINNET_API_KEY

# ============================================================================
# CLOUD SERVICES
# ============================================================================
# AWS Production Configuration
AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET_KEY
AWS_S3_BUCKET=labelmint-prod-storage
AWS_REGION=us-east-1

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================
# OpenAI Production Configuration
OPENAI_API_KEY=CHANGE_THIS_OPENAI_API_KEY

# Telegram Production Configuration
TELEGRAM_BOT_TOKEN=CHANGE_THIS_TELEGRAM_BOT_TOKEN
TELEGRAM_WEBAPP_SECRET=CHANGE_THIS_TELEGRAM_WEBAPP_SECRET

# Email Production Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@labelmint.it
SMTP_PASS=CHANGE_THIS_APP_PASSWORD
EMAIL_FROM=noreply@labelmint.it

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Production Monitoring
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Error Tracking (Required for Production)
SENTRY_DSN=CHANGE_THIS_SENTRY_DSN

# Alerting (Required for Production)
SLACK_WEBHOOK_URL=CHANGE_THIS_SLACK_WEBHOOK_URL

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30