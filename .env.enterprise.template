# LabelMint Enterprise Environment Variables
# Copy this file to .env.enterprise and update with your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://postgres:your_secure_postgres_password@postgres:5432/labelmint_enterprise

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h

# SSO Configuration
SAML_ISSUER=https://your-domain.com/saml
SAML_ACS_URL=https://your-domain.com/api/sso/acs
BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-enterprise-domain.com

# Message Queue Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password
MQ_CONNECTION_STRING=amqp://admin:your_rabbitmq_password@rabbitmq:5672

# File Storage Configuration
UPLOAD_MAX_SIZE=100MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,csv,xlsx

# Analytics Configuration
PYTHON_ML_SERVICE_URL=http://python-ml-service:8000
ELASTICSEARCH_URL=http://elasticsearch:9200

# White Label Configuration
CDN_BASE_URL=https://cdn.your-domain.com
ASSET_STORAGE_URL=https://assets.your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-smtp-password

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-enterprise-domain.com

# Monitoring Configuration
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development/Production
NODE_ENV=production

# SSL Certificate Paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem