# LabelMint Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
ENVIRONMENT=development
APP_VERSION=dev-local

# ===========================================
# PORT CONFIGURATION
# ===========================================
WEB_PORT=3000
API_GATEWAY_PORT=3104
LABELING_BACKEND_PORT=3101
PAYMENT_BACKEND_PORT=3103
CLIENT_BOT_PORT=3105
WORKER_BOT_PORT=3106
POSTGRES_PORT=5432
REDIS_PORT=6379

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=labelmint_dev
POSTGRES_USER=labelmint_dev
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://labelmint_dev:your_secure_password_here@localhost:5432/labelmint_dev

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379
REDIS_BOTS_URL=redis://:your_redis_password_here@localhost:6380

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your_session_secret_change_in_production
BCRYPT_ROUNDS=10

# ===========================================
# TON BLOCKCHAIN CONFIGURATION
# ===========================================
TON_API_KEY=your_ton_api_key
TON_RPC_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_MERCHANT_ADDRESS=0:your_merchant_address
USDT_MASTER_CONTRACT=0:your_usdt_contract
TON_CONTRACT_ADDRESS=0:your_contract_address

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
TELEGRAM_BOT_TOKEN_CLIENT=your_client_bot_token
TELEGRAM_BOT_TOKEN_WORKER=your_worker_bot_token
CLIENT_BOT_TOKEN=your_client_bot_token
WORKER_BOT_TOKEN=your_worker_bot_token
TELEGRAM_WEB_APP_URL=https://your-app.domain.com

# ===========================================
# APPLICATION URLs
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3104
NEXT_PUBLIC_WS_URL=ws://localhost:3104
WEB_APP_URL=http://localhost:3000
LABELING_API_URL=http://localhost:3101
PAYMENT_API_URL=http://localhost:3103
WS_URL=ws://localhost:3104

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_ENDPOINT=localhost
MINIO_REGION=us-east-1
MINIO_BUCKET=labelmint-dev

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_ENABLED=true
TRACING_ENABLED=true

# ===========================================
# SECURITY HEADERS
# ===========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_PAYMENTS=true
FEATURE_BOTS=true
FEATURE_MONITORING=true
FEATURE_DEBUG_TOOLS=true
FEATURE_ANALYTICS=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
CACHE_TTL=300
SESSION_TTL=86400
MAX_UPLOAD_SIZE=10485760
CONCURRENT_TASKS_PER_USER=5

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
SMTP_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@labelmint.dev