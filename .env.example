# LabelMint Environment Configuration
# Copy this file to .env and update the values

# ============================================================================
# NODE CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3002

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://labelmint:labelmint123@localhost:5432/labelmint
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=labelmint
DATABASE_USER=labelmint
DATABASE_PASSWORD=labelmint123

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://:redis123@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# AUTHENTICATION
# ============================================================================
BCRYPT_ROUNDS=12
TWO_FACTOR_ISSUER=LabelMint

# ============================================================================
# TON BLOCKCHAIN CONFIGURATION
# ============================================================================
TON_TESTNET=true
TON_API_ENDPOINT=https://toncenter.io/api/v2/jsonRPC
TON_API_KEY=your-ton-api-key
TON_CONFIG_SERVER=https://ton.org/global.config.json
TON_WORKCHAIN=0

# ============================================================================
# AWS S3 CONFIGURATION
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=labelmint-storage
AWS_S3_BUCKET_URL=https://labelmint-storage.s3.amazonaws.com

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@labelmint.mindburn.org

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================================================
# TELEGRAM CONFIGURATION
# ============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBAPP_SECRET=your-telegram-webapp-secret

# ============================================================================
# WEB PUSH CONFIGURATION
# ============================================================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=your-email@labelmint.mindburn.org

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9464
LOG_LEVEL=info

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:3002,http://localhost:5173
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_TTL=3600
CACHE_PREFIX=labelmint:

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
DEBUG=false
MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false