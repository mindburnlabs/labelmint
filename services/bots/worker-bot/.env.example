# LabelMint Worker Bot Configuration
BOT_TOKEN=your-telegram-worker-bot-token-here
ENVIRONMENT=development

# API Endpoints
LABELING_API_URL=http://localhost:3001
PAYMENT_API_URL=http://localhost:3000
WEBAPP_URL=http://localhost:5173

# Mini-App Configuration
MINIAPP_URL=https://labelmint.mindburn.org/worker

# Redis for session management
REDIS_URL=redis://:redis123@localhost:6379

# Admin Telegram IDs (comma separated)
ADMIN_TELEGRAM_IDS=

# Feature Flags
ENABLE_TASK_NOTIFICATIONS=true
ENABLE_EARNINGS_NOTIFICATIONS=true
ENABLE_REFERRAL_SYSTEM=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Task Configuration
TASK_TIMEOUT_SECONDS=30
MAX_CONCURRENT_TASKS=1

# Withdrawal Configuration
MIN_WITHDRAWAL_USD=1.00
MAX_WITHDRAWAL_USD=50.00
WITHDRAWAL_COOLDOWN_HOURS=24

# TON Configuration
ENABLE_TON_WITHDRAWALS=true