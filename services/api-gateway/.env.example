# Environment
NODE_ENV=development

# Gateway Configuration
GATEWAY_PORT=3002

# Service URLs
LABELING_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=gateway:
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_PREFIX=labelmint:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_AUDIENCE=labelmint
JWT_ISSUER=labelmint-api

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/gateway.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Health Check
HEALTH_CHECK_INTERVAL=*/30 * * * * *

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9464

# Grafana (for monitoring profile)
GRAFANA_PASSWORD=admin