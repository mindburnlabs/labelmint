{
  "name": "@labelmint/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for LabelMint applications",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "utilities",
    "helpers",
    "formatters",
    "validation",
    "typescript"
  ],
  "author": "LabelMint Team",
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.3",
    "eslint": "^9.15.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "files": [
    "src/**/*"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./ui": "./src/ui/cn.ts",
    "./format": "./src/format/index.ts",
    "./async": "./src/async/index.ts",
    "./dom": "./src/dom/index.ts",
    "./device": "./src/device/index.ts",
    "./string": "./src/string/index.ts",
    "./math": "./src/math/index.ts"
