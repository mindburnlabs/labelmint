{
  "name": "@labelmint/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for LabelMint platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "pg": "^8.16.3",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.11.10",
    "eslint": "^9.15.0",
    "typescript": "^5.7.2",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mindburn-labs/labelmint.git",
    "directory": "packages/shared"
  },
  "keywords": [
    "shared",
    "utilities",
    "types",
    "validation",
    "database"
  ],
  "author": "MindBurn Labs",
  "license": "MIT"
}
